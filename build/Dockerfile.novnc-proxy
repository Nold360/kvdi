#################
# Compile image #
#################
FROM golang:1.14-alpine as builder

RUN apk --update-cache add upx

# Setup build directory
RUN mkdir -p /build
WORKDIR /build

# Go build options
ENV GO111MODULE=on
ENV CGO_ENABLED=0

# Fetch deps first as they don't change frequently
COPY go.mod /build/go.mod
COPY go.sum /build/go.sum
RUN go mod download

# Copy go code
COPY version/         /build/version
COPY pkg/             /build/pkg
COPY cmd/novnc-proxy  /build/cmd/novnc-proxy

# Build the binary
ARG VERSION
ARG GIT_COMMIT
RUN go build \
  -o /tmp/novnc-proxy \
  -ldflags="-X 'github.com/tinyzimmer/kvdi/version.Version=${VERSION}'" \
  -ldflags="-X 'github.com/tinyzimmer/kvdi/version.GitCommit=${GIT_COMMIT}'" \
  ./cmd/novnc-proxy && upx /tmp/novnc-proxy

###############
# Final Image #
###############
FROM scratch

COPY --from=builder /tmp/novnc-proxy /novnc-proxy

EXPOSE 8443
ENTRYPOINT ["/novnc-proxy"]
